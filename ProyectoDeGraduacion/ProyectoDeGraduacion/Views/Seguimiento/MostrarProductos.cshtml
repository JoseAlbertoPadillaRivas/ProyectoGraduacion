@{
    ViewBag.Title = "Consultar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<h4>Consulta de productos del inventario</h4>
<hr>
<br>

<div class="row">
    <div class="col-12">

        @if (ViewBag.msj != null)
        {
            <div class="alert alert-info" role="alert" style="text-align:center">
                @ViewBag.msj
            </div>
        }
        <a class="btn btn-info" href="@Url.Action("AgregarProducto","Seguimiento")">
            Agregar producto de pacientes
        </a>
        <a class="btn btn-info" href="@Url.Action("MisProductos","Seguimiento")">
            Vista de usuario
        </a>
        <br>
        <br>

        <table id="tablaProductos" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Fecha de entrega</th>
                    <th>Estado</th>
                    <th>Eliminar</th>
                    <th>Actualizar</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Retenedores</td>
                    <td>25/10/2024</td>
                    <td>En proceso</td>
                    <td style="text-align:center">
                        <button type="button" class="btn btn-info btn-eliminar" data-name="Retenedores">
                            Eliminar Producto
                        </button>
                    </td>
                    <td style="text-align:center">
                        <a class="btn btn-info" href="@Url.Action("ActualizarProducto","Seguimiento")">
                            Actualizar Producto
                        </a>
                    </td>
                </tr>
                <!-- Más filas para otros productos -->
            </tbody>
        </table>

    </div>
</div>

<script src="~/root/plugins/jquery/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    $(document).ready(function () {
        $("#tablaProductos").DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/2.0.2/i18n/es-ES.json'
            },
            columnDefs: [{ type: 'string', target: [0, 1, 2, 3] }]
        });

        $(document).on("click", ".btn-eliminar", function () {
            var producto = $(this).attr('data-name');
            Swal.fire({
                title: '¿Desea eliminar el Producto?',
                text: producto,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Eliminado',
                        'El producto ha sido eliminado.',
                        'success'
                    );
                    // Aquí puedes agregar la lógica para eliminar el producto del backend
                }
            });
        });
    });
</script>
