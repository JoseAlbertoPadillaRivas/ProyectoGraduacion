@{
    ViewBag.Title = "Consultar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<h4>Consulta de productos del inventario</h4>
<hr>
<br>

<div class="row">
    <div class="col-12">

        @if (ViewBag.msj != null)
        {
            <div class="alert alert-info" role="alert" style="text-align:center">
                @ViewBag.msj
            </div>
        }
        <a class="btn btn-primary" href="@Url.Action("AgregarProducto","Seguimiento")">
            Agregar producto de pacientes
        </a>
        <a class="btn btn-primary" href="@Url.Action("MisProductos","Seguimiento")">
            Vista de usuario
        </a>
        <br>
        <br>

        <table id="tablaProductos" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Fecha de entrega</th>
                    <th>Estado</th>
                    <th>Eliminar</th>
                    <th>Actualizar</th>

                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>Retenedores</td>
                    <td>25/10/2024</td>
                    <td>En proceso</td>
                    <td style="text-align:center">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalProductos"
                                data-id="Consecutivo" data-name="Nombre">
                            Eliminar Producto
                        </button>
                    </td>
                    <td style="text-align:center">
                        <a class="btn btn-primary" href="@Url.Action("ActualizarProducto","Seguimiento")">
                            Actualizar Producto
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
</div>

<div class="modal fade" id="ModalProductos" data-backdrop="static" data-keyboard="false" tabindex="-1"
     aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmación</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Desea eliminar el Producto? <label id="Nombre"></label>?
            </div>
            <div class="modal-footer">
                <ul>
                    <li class="btn btn-success">Confirmar</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script src="~/root/plugins/jquery/jquery.min.js"></script>
<script>
$(document).ready(function () {
    $("#tablaProductos").DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/2.0.2/i18n/es-ES.json'
            },
            columnDefs: [{ type: 'string', target: [0, 1, 2, 3] }]
        });
    })

    $(document).on("click", ".AbrirModal", function () {
        $("#Consecutivo").val($(this).attr('data-id'));
        $("#Nombre").text($(this).attr('data-name'));
    });</script>

