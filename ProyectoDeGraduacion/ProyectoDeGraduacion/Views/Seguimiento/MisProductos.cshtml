@{
    ViewBag.Title = "Mis Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">Seguimiento de Mis Productos</h2>
    <p class="text-center">Consulta el estado de tus productos en seguimiento.</p>
</div>

<div class="row">
    <div class="col-12">

        @if (ViewBag.msj != null)
        {
            <div class="alert alert-info" role="alert" style="text-align:center">
                @ViewBag.msj
            </div>
        }
        <a class="btn btn-info" href="@Url.Action("MostrarProductos", "Seguimiento")">
            Vista de admin
        </a>
        <br>
        <br>

        <div class="table-responsive">
            <table id="tablaProductos" class="table table-striped table-bordered historial-table">
                <thead class="thead-dark">
                    <tr>
                        <th>Nombre del artículo</th>
                        <th>Fecha de entrega</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Retenedores</td>
                        <td>25/10/2024</td>
                        <td class="text-center">
                            <span style="color: #ffc107;">&#x25CF;</span> En proceso <span style="color: #ffc107;">&#x25CF;</span>
                        </td>
                    </tr>
                    <!-- Más filas para otros productos -->
                </tbody>
            </table>
        </div>

    </div>
</div>

<script src="~/root/plugins/jquery/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#tablaProductos").DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/2.0.2/i18n/es-ES.json'
            },
            columnDefs: [{ type: 'string', target: [0, 1, 2] }]
        });
    });
</script>
