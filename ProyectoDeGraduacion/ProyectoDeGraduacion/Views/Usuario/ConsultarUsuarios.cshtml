@{
    ViewBag.Title = "Consultar Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">Gestión de Usuarios</h2>
    <p class="text-center">Administra, actualiza y gestiona los perfiles y estados de los usuarios.</p>
</div>

<div class="row">
    <div class="col-12">

        @if (ViewBag.msj != null)
        {
            <div class="alert alert-info" role="alert" style="text-align:center">
                @ViewBag.msj
            </div>
        }
        <br>
        <br>

        <div class="table-responsive">
            <table id="tablaUsuarios" class="table table-striped table-bordered historial-table">
                <thead class="thead-dark">
                    <tr>
                        <th>Cédula</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Estado</th>
                        <th>Cambiar estado</th>
                        <th>Actualizar información</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>119190738</td>
                        <td>Jose Padilla</td>
                        <td>jpadilla0738@ufide.ac.cr</td>
                        <td class="text-center">
                            <span style="color: #28a745;">&#x25CF;</span> Activo <span style="color: #28a745;">&#x25CF;</span>
                        </td>
                        <td style="text-align:center">
                            <button type="button" class="btn btn-info btn-sm btn-cambiar-estado" data-name="Jose Padilla">
                                Cambiar estado
                            </button>
                        </td>
                        <td style="text-align:center">
                            <a class="btn btn-info btn-sm" href="@Url.Action("ActualizarUsuario", "Usuario")">
                                Actualizar Usuario
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</div>

<script src="~/root/plugins/jquery/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    $(document).ready(function () {
        $("#tablaUsuarios").DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/2.0.2/i18n/es-ES.json'
            },
            columnDefs: [{ type: 'string', target: [0, 1, 2, 3] }]
        });

        $(document).on("click", ".btn-cambiar-estado", function () {
            var usuario = $(this).attr('data-name');
            Swal.fire({
                title: '¿Cambiar el estado del usuario?',
                text: usuario,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Cambiar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Estado Cambiado',
                        'El estado del usuario ha sido cambiado.',
                        'success'
                    );
                    // Aquí puedes agregar la lógica para cambiar el estado del usuario en el backend
                }
            });
        });
    });
</script>
