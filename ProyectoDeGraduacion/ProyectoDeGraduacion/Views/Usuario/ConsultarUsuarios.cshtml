@{
    ViewBag.Title = "ConsultarUsuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<h4>Consulta de usuarios</h4>
<hr>
<br>

<div class="row">
    <div class="col-12">

        @if (ViewBag.msj != null)
        {
            <div class="alert alert-info" role="alert" style="text-align:center">
                @ViewBag.msj
            </div>
        }
        <br>
        <br>

        <table id="tablaUsuarios" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Cédula</th>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Estado</th>
                    <th>Cambiar estado</th>
                    <th>Actualizar información</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>119190738</td>
                    <td>Jose Padilla</td>
                    <td>jpadilla0738@ufide.ac.cr</td>
                    <td>Activo</td>
                    <td style="text-align:center">
                        <button type="button" class="btn btn-info btn-cambiar-estado" data-name="Jose Padilla">
                            Cambiar estado
                        </button>
                    </td>
                    <td style="text-align:center">
                        <a class="btn btn-info" href="@Url.Action("ActualizarUsuario","Usuario")">
                            Actualizar Usuario
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
</div>

<script src="~/root/plugins/jquery/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    $(document).ready(function () {
        $("#tablaUsuarios").DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/2.0.2/i18n/es-ES.json'
            },
            columnDefs: [{ type: 'string', target: [0, 1, 2, 3] }]
        });

        $(document).on("click", ".btn-cambiar-estado", function () {
            var usuario = $(this).attr('data-name');
            Swal.fire({
                title: '¿Cambiar el estado del usuario?',
                text: usuario,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Cambiar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Estado Cambiado',
                        'El estado del usuario ha sido cambiado.',
                        'success'
                    );
                    // Aquí puedes agregar la lógica para cambiar el estado del usuario en el backend
                }
            });
        });
    });
</script>
