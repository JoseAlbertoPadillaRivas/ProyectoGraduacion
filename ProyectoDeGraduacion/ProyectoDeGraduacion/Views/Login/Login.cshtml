@model ProyectoDeGraduacion.Entidades.Pacientes

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
    ViewBag.Title = "Home Page";
}

<div class="card mt-4">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Iniciar Sesión</p>

        @if (ViewBag.msj != null)
        {
            <div class="alert alert-info" role="alert" style="text-align:center">
                @ViewBag.msj
            </div>
        }
        @using (Html.BeginForm("Login", "Login"))
        {
            <div class="input-group mb-3">
                @Html.TextBoxFor(m => m.Correo, new { @type = "email", @class = "form-control", @placeholder = "Correo Electrónico" })
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                @Html.TextBoxFor(m => m.Contrasenna, new { @type = "password", @class = "form-control", @placeholder = "Contraseña" })
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="text-center text-lg-start mt-2 pt-2">
                <button type="submit" class="btn btn-custom btn">
                    Iniciar Sesión
                </button>
                <p class="mt-3">
                    <a href="@Url.Action("Registrarse", "Login")" class="link-custom">Registrarse</a>
                </p>
            </div>
        }
    </div>
</div>
