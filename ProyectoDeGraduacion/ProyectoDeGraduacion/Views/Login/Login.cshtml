@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
    ViewBag.Title = "Home Page";
}

<div class="card mt-4">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Iniciar Sesión</p>

        @if (ViewBag.msj != null)
        {
            <div class="alert alert-info" role="alert" style="text-align:center">
                @ViewBag.msj
            </div>
        }

    <form>
        <div class="input-group mb-3">
            <input type="text" id="Correo" name="nombre" class="form-control" placeholder="Correo">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                </div>
            </div>
        </div>
        <div class="input-group mb-3">
            <input type="password" id="Password" name="password" class="form-control" placeholder="Contraseña">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <a href="@Url.Action("Index", "Login")" class="btn btn-info btn-block text-white">Ingresar</a>
            </div>
        </div>
    </form>
        <p class="mb-0">
            <a href="@Url.Action("Registrarse","Login")" class="text-center">Crear una cuenta</a>
        </p>
    </div>
</div>
