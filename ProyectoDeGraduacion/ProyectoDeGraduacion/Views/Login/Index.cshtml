<div class="mb-4 mt-5">
    <div class="tp-caption sfb flat-subtitle-slider" data-x="15" data-y="322" data-speed="1000" data-start="1000" data-easing="Power3.easeInOut">Mejora tu</div>

    <div class="tp-caption sft flat-title-slider style1" data-x="15" data-y="382" data-speed="1000" data-start="1500" data-easing="Power3.easeInOut">
        SALUD DENTAL
    </div>
</div>

<div id="chatbot" class="card mx-auto mt-5" style="max-width: 400px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
    <div class="card-header text-center" style="background-color: #343a40; color: white; font-weight: bold;">
        Asistente Virtual de la Clínica Dental
    </div>
    <div class="card-body">
        @if (TempData["Respuesta"] != null)
        {
            <div class="alert alert-info text-center" id="respuesta-chatbot">
                <strong>Respuesta:</strong> @TempData["Respuesta"]
            </div>
        }

        <form method="post" action="@Url.Action("ObtenerRespuesta", "Chatbot")" id="chatbotForm" class="text-center">
            <button style="background-color: #343a40; color: white;" type="submit" name="pregunta" value="¿Cuál es el horario de atención?" class="btn btn-block my-2">
                ¿Cuál es el horario de atención?
            </button>
            <button style="background-color: #343a40; color: white;" type="submit" name="pregunta" value="¿Qué servicios ofrecen?" class="btn btn-block my-2">
                ¿Qué servicios ofrecen?
            </button>
        </form>
    </div>
</div>



