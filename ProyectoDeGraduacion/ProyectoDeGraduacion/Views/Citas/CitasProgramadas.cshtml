
@{
    ViewBag.Title = "CitasProgramadas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/root/dist/css/stylesCitas.css" rel="stylesheet" />
</head>

<div class="mb-2">
    <a class="btn btn-primary" href="@Url.Action("MisCitas","Citas")"> Vista Paciente</a>
</div>


<div class="row">
    <div class="col-12">
        <table id="citasProgramadas" class="table table-bordered table-hover">
            <caption class="text-center"><strong>Citas Programadas</strong></caption>
            <thead>
                <tr>
                    <th></th>
                    <th>Paciente</th>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Estado</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td> 1 </td>
                    <td>Jose Padilla Rivas</td>
                    <td>10/8/2024</td>
                    <td>8:30</td>
                    <td>Cancelada</td>
                    <td></td>
                    <td></td>
                <tr>
                    <td> 1 </td>
                    <td>Jose Padilla Rivas</td>
                    <td>14/8/2024</td>
                    <td>8:30</td>
                    <td>Finalizada</td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td> 2 </td>
                    <td>Josué Herrera</td>
                    <td>14/8/2024</td>
                    <td>8:30</td>
                    <td>Próxima</td>
                    <td>
                        <button type="button" class="btn btn-primary" id="btn-cancelar" data-bs-toggle="modal" data-bs-target="#ModalCitas">
                            Cancelar
                        </button>
                    </td>
                    <td><a class="btn btn-primary" href="@Url.Action("ReprogramarCita","Citas")">Reprogramar</a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="ModalCitas" data-backdrop="static" data-keyboard="false" tabindex="-1"
     aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmación</h5>
                <button type="button" class="close"  data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Desea Cancelar la cita de: Josué Herrera?
            </div>
            <div class="modal-footer">
                <ul>
                    <li class="btn btn-success" data-bs-dismiss="modal">Confirmar</li>
                    @*<a class="btn btn-primary" href="@Url.Action("CitasProgramadas", "Citas")">Confirmar</a>*@
                </ul>
            </div>
        </div>
    </div>
</div>

<script src="~/root/plugins/jquery/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#citasProgramadas").DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/2.0.2/i18n/es-ES.json'
            },
            columnDefs: [{ type: 'string', target: [0, 1, 2, 3] }]
        });
    })

    //$('#btn-cancelar').on('click', function() {
