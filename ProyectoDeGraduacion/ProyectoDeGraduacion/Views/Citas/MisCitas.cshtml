@model IEnumerable<ProyectoDeGraduacion.BaseDatos.tCitas>

@{
    ViewBag.Title = "Mis Citas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">Mis Citas</h2>
    <p class="text-center">Consulta tus citas programadas con facilidad.</p>
</div>

<div class="mb-2">
    <a class="btn btn-info" href="@Url.Action("CitasProgramadas", "Citas")">Vista Administrador</a>
</div>

<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered historial-table">
                <thead class="thead-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Hora</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                            <td>@item.Hora.ToString()</td>
                            <td class="text-center">
                        </tr>
                    }    
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="mb-2">
    <a class="btn btn-info" href="@Url.Action("RegistrarCita", "Citas")">
        Nueva Cita
    </a>
</div>
