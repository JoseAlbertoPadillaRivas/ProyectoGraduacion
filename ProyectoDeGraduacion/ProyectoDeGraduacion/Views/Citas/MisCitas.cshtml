@{
    ViewBag.Title = "Mis Citas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">Mis Citas</h2>
    <p class="text-center">Consulta tus citas programadas con facilidad.</p>
</div>

<div class="mb-2">
    <a class="btn btn-info" href="@Url.Action("CitasProgramadas", "Citas")">Vista Administrador</a>
</div>

<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered historial-table">
                <thead class="thead-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Hora</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>10/08/2024</td>
                        <td>8:30</td>
                        <td class="text-center">
                            <span style="color: #dc3545;">&#x25CF;</span> Cancelada <span style="color: #dc3545;">&#x25CF;</span>
                        </td>
                    </tr>
                    <tr>
                        <td>14/08/2024</td>
                        <td>8:30</td>
                        <td class="text-center">
                            <span style="color: #28a745;">&#x25CF;</span> Finalizada <span style="color: #28a745;">&#x25CF;</span>
                        </td>
                    </tr>
                    <tr>
                        <td>20/08/2024</td>
                        <td>9:00</td>
                        <td class="text-center">
                            <span style="color: #ffc107;">&#x25CF;</span> Próxima <span style="color: #ffc107;">&#x25CF;</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="mb-2">
    <a class="btn btn-info" href="@Url.Action("RegistrarCita", "Citas")">
        Nueva Cita
    </a>
</div>
