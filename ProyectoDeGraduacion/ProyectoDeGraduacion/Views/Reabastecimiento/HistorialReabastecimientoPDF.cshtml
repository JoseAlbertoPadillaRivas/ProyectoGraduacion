@model List<ProyectoDeGraduacion.BaseDatos.tOrdenesCompra>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Historial de Reabastecimientos</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <h2>Historial de Reabastecimientos</h2>

    <table>
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad Comprada</th>
                <th>Fecha de compra</th>
                <th>Proveedor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NombreProducto</td>
                    <td>@item.Cantidad</td>
                    <td>@item.FechaCompra</td>
                    <td>@item.idProveedor</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
