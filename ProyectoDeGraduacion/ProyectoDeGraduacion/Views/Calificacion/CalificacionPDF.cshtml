@model List<ProyectoDeGraduacion.Entidades.Calificacion>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Reporte de Calificaciones - Clínica Dra. Mariana Garro</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            margin: 20px;
        }

        /* Encabezado */
        .header {
            text-align: center;
            margin-bottom: 20px;
        }

            .header h2 {
                font-size: 24px;
                color: #0056b3;
                margin-bottom: 5px;
            }

            .header p {
                font-size: 14px;
                color: #777;
            }

        /* Tabla de calificaciones */
        .table-container {
            width: 100%;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

            .table th, .table td {
                border: 1px solid #ddd;
                padding: 10px;
                text-align: left;
                font-size: 14px;
            }

            .table th {
                background-color: #343a40;
                color: white;
                font-weight: bold;
                text-transform: uppercase;
            }

            .table tr:nth-child(even) {
                background-color: #f9f9f9;
            }

        .footer {
            text-align: right;
            font-size: 12px;
            color: #777;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h2>Clínica Dental Dra. Mariana Garro</h2>
        <p>Reporte de Calificaciones de Pacientes</p>
    </div>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Paciente</th>
                    <th>Servicio</th>
                    <th>Calificación</th>
                    <th>Comentario</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@DateTime.Now.ToString("dd/MM/yyyy")</td>
                        <td>@item.NombrePaciente</td>
                        <td>@item.NombreServicio</td>
                        <td>@item.Calificaciones de 5</td>
                        <td>@item.Opinion</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="footer">
        <p>Reporte generado el @DateTime.Now.ToString("dd/MM/yyyy")</p>
    </div>
</body>
</html>
