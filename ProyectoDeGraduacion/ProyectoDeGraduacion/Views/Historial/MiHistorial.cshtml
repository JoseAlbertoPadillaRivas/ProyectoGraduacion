@model List<ProyectoDeGraduacion.BaseDatos.tHistorial>

@{
    ViewBag.Title = "Historial Clínico - Paciente";
}

<div class="container mt-4">
    <h2 class="text-center">Gestión de Historial Clínico</h2>
    <p class="text-center">Administra, revisa y gestiona tu historial clínico desde esta sección</p>
</div>
<div class="historial-section">
    <div class="table-responsive">
        <table id="tablaHistorial" class="table table-striped table-bordered historial-table">
            <thead class="thead-dark">
                <tr>
                    <th>Fecha de consulta</th>
                    <th>Diagnostico</th>
                    <th>Tratamiento</th>
                    <th>Medicación</th>
                    <th>Observaciones</th>
                    <th>Archivos</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FechaConsulta</td>
                        <td>@item.Diagnostico</td>
                        <td>@item.Tratamiento</td>
                        <td>@item.Medicacion</td>
                        <td>@item.Observaciones</td>
                        <td style="text-align:center">
                            <a class="btn btn-primary btn-sm" href="@Url.Action("DescargarArchivo", "Historial", new { idHistorial = item.idHistorial })">
                                <i class="fa fa-download"></i> Descargar
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $("#tablaHistorial").DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/2.0.2/i18n/es-ES.json'
            },
            columnDefs: [{ type: 'string', targets: [0, 1, 2, 3, 4] }]
        });
    });
</script>
<style>
    .btn-sm {
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        border-radius: 0.2rem;
    }
</style>
