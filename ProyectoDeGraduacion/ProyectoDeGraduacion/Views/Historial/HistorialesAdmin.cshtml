@model List<ProyectoDeGraduacion.BaseDatos.tHistorial>

@{
    ViewBag.Title = "Historial Clínico - Admin";
}

<div class="container mt-4">
    <h2 class="text-center">Gestión de Historiales Clínicos</h2>
    <p class="text-center">Administra, revisa y gestiona los historiales clínicos de los pacientes desde esta sección.</p>
</div>
<div class="search-box mb-4">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Buscar por cédula de paciente..." aria-label="Buscar por cédula">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button">Buscar</button>
        </div>
    </div>
</div>

<div class="historial-section">
    <div class="table-responsive">
        <table class="table table-striped table-bordered historial-table">
            <thead class="thead-dark">
                <tr>
                    <th>ID Historial</th>
                    <th>ID Paciente</th>
                    <th>Fecha de consulta</th>
                    <th>Diagnostico</th>
                    <th>Tratamiento</th>
                    <th>Medicación</th>
                    <th>Observaciones</th>
                    <th>Archivos</th>
                    <th>Actualizar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.idHistorial</td>
                        <td>@item.idPaciente</td>
                        <td>@item.FechaConsulta</td>
                        <td>@item.Diagnostico</td>
                        <td>@item.Tratamiento</td>
                        <td>@item.Medicacion</td>
                        <td>@item.Observaciones</td>
                        <td style="text-align:center">
                            <a class="btn btn-secondary" href="@item.Archivo" download>
                                <i class="fa fa-download"></i> Descargar
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("ActualizarHistorial", "Historial", new { idHistorial = item.idHistorial })" class="btn btn-warning btn-sm">Modificar</a>
                        </td>
                        <td style="text-align:center">
                            <button type="button" class="btn btn-danger btn-eliminar" data-id="@item.idHistorial" data-name="@item.idPaciente">
                                <i class="fa fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="text-right mt-3">
    <a href="@Url.Action("RegistrarHistoria", "Historial")" class="btn btn-success btn-sm">Nuevo Registro</a>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $(document).on("click", ".btn-eliminar", function () {
        var historialID = $(this).attr('data-id');
        var pacienteID = $(this).attr('data-name');

        Swal.fire({
            title: '¿Eliminar el historial?',
            text: "Paciente: " + pacienteID,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Eliminar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '@Url.Action("EliminarHistoria", "Historial")',
                    type: 'POST',
                    data: { idHistorial: historialID },
                    success: function (response) {
                        Swal.fire(
                            'Historial Eliminado',
                            'El historial ha sido eliminado correctamente',
                            'success'
                        ).then(function () {
                            location.reload();
                        });
                    },
                    error: function () {
                        Swal.fire(
                            'Error',
                            'No se pudo eliminar el historial',
                            'error'
                        );
                    }
                });
            }
        });
    });
</script>