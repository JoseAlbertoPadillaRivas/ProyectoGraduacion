@model List<ProyectoDeGraduacion.BaseDatos.tHistorial>

@{
    ViewBag.Title = "Historial Clínico - Admin";
}

<div class="container mt-4">
    <h2 class="text-center">Gestión de Historiales Clínicos</h2>
    <p class="text-center">Administra, revisa y gestiona los historiales clínicos de los pacientes desde esta sección.</p>
</div>
<div class="historial-section">
    <div class="table-responsive">
        <table class="table table-striped table-bordered historial-table">
            <thead class="thead-dark">
                <tr>
                    <th>ID Historial</th>
                    <th>ID Paciente</th>
                    <th>Fecha de consulta</th>
                    <th>Diagnostico</th>
                    <th>Tratamiento</th>
                    <th>Medicación</th>
                    <th>Observaciones</th>
                    <th>Archivos</th>
                    <th>Actualizar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.idHistorial</td>
                        <td>@item.idPaciente</td>
                        <td>@item.FechaConsulta</td>
                        <td>@item.Diagnostico</td>
                        <td>@item.Tratamiento</td>
                        <td>@item.Medicacion</td>
                        <td>@item.Observaciones</td>
                        <td style="text-align:center">
                            <a class="btn btn-primary btn-sm" href="@item.Archivo" download>
                                <i class="fa fa-download"></i> Descargar
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("ActualizarHistorial", "Historial", new { idHistorial = item.idHistorial })" class="btn btn-warning btn-sm">
                                <i class="fa fa-edit"></i> Modificar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="text-right mt-3">
    <a href="@Url.Action("RegistrarHistoria", "Historial")" class="btn btn-success btn-sm">
        <i class="fa fa-plus"></i> Nuevo Registro
    </a>
</div>

<style>
    .btn-sm {
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        border-radius: 0.2rem;
    }
</style>
