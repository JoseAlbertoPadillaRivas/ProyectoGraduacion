@{
    ViewBag.Title = "Nuevo Registro";
    var nombrePaciente = "Juan Pérez"; // Nombre del paciente provisional para la prueba
}

<h2 class="historial-header">Nuevo Registro para el paciente @nombrePaciente</h2>

<div class="historial-section">
    <form id="registroForm" method="post" enctype="multipart/form-data" action="@Url.Action("RegistrarHistoria", "Historial")">
        <div class="form-group">
            <label for="fechaConsulta">Fecha de Consulta:</label>
            <input type="date" class="form-control" id="fechaConsulta" name="fechaConsulta" required>
        </div>
        <div class="form-group">
            <label for="diagnostico">Diagnóstico:</label>
            <textarea class="form-control" id="diagnostico" name="diagnostico" required></textarea>
        </div>
        <div class="form-group">
            <label for="tratamiento">Tratamiento Aplicado:</label>
            <textarea class="form-control" id="tratamiento" name="tratamiento" required></textarea>
        </div>
        <div class="form-group">
            <label for="medicacion">Medicación Recetada:</label>
            <textarea class="form-control" id="medicacion" name="medicacion"></textarea>
        </div>
        <div class="form-group">
            <label for="observaciones">Observaciones:</label>
            <textarea class="form-control" id="observaciones" name="observaciones" rows="6"></textarea>
        </div>

        <!-- Apartado para subir archivos -->
        <div class="form-group">
            <label for="archivos">Subir Archivos (opcional):</label>
            <input type="file" class="form-control" id="archivos" name="archivos" multiple>
        </div>

        <div>
            <button type="submit" class="btn btn-dark">Registrar</button>
        </div>
        <div class="historial-section text-center">
            <a href="@Url.Action("IndexHistorial", "Historial")" class="btn btn-info">Regresar al Historial</a>
        </div>
    </form>
</div>

<script>
    document.getElementById("registroForm").addEventListener("submit", function(event) {
        event.preventDefault();

        Swal.fire({
            title: 'Registro Exitoso',
            text: 'El historial clínico ha sido registrado con éxito.',
            icon: 'success',
            confirmButtonText: 'Aceptar'
        }).then(function() {

            window.location.href = '@Url.Action("Index", "Historial")';
        });
    });
</script>