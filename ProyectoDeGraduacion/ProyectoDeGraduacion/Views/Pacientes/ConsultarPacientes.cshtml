
@model List<ProyectoDeGraduacion.BaseDatos.tPacientes>
@{
    ViewBag.Title = "Consultar Pacientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">Gestión de Pacientes</h2>
    <p class="text-center">Administra, actualiza y gestiona los perfiles y estados de los usuarios.</p>
</div>

<div class="row">
    <div class="col-12">

        @if (ViewBag.msj != null)
        {
            <div class="alert alert-info" role="alert" style="text-align:center">
                @ViewBag.msj
            </div>
        }
        <br>
        <br>

        <div class="table-responsive">
            <table id="tablaUsuarios" class="table table-striped table-bordered historial-table">
                <thead class="thead-dark">
                    <tr>
                        <th>Cédula</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Estado</th>
                        <th>Cambiar estado</th>
                        <th>Actualizar información</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Cedula</td>
                            <td>@item.Nombre</td>
                            <td>@item.Correo</td>
                            @if (item.Estado)
                            {
                                <td>Activo</td>
                            }
                            else
                            {
                                <td>Inactivo</td>
                            }
                            <td style="text-align:center">
                                <button type="button" class="btn btn-primary btn-cambiar-estado" data-id="@item.idPaciente" data-name="@item.Nombre">
                                    <i class="fa fa-share-square"></i>
                                </button>
                            </td>

                            <td style="text-align:center">
                                <a class="btn btn-primary" href="@Url.Action("ActualizarPaciente","Pacientes", new { idPaciente = item.idPaciente })">
                                    <i class="fa fa-user"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

<script src="~/root/plugins/jquery/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    $(document).ready(function () {
        $("#tablaUsuarios").DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/2.0.2/i18n/es-ES.json'
            },
            columnDefs: [{ type: 'string', target: [0, 1, 2, 3] }]
        });

        $(document).on("click", ".btn-cambiar-estado", function () {
            var usuarioId = $(this).attr('data-id');
            var usuario = $(this).attr('data-name');

            Swal.fire({
                title: '¿Cambiar el estado del usuario?',
                text: usuario,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Cambiar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("CambiarEstadoPaciente", "Pacientes")',
                        type: 'POST',
                        data: { idPaciente: usuarioId },
                        success: function (response) {
                            Swal.fire(
                                'Estado Cambiado',
                                'El estado del usuario ha sido cambiado.',
                                'success' 
                            ).then(function () {
                                location.reload(); 
                            });
                        },
                        error: function () {
                            Swal.fire(
                                'Error',
                                'No se pudo cambiar el estado del usuario.',
                                'error'
                            );
                        }
                    });
                }
            });
        });
    });
</script>

