@model ProyectoDeGraduacion.BaseDatos.tPacientes

@{
    ViewBag.Title = "Actualizar Paciente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<h4>Actualizar datos del usuario</h4>
<hr>
<br>

<div class="row">
    <div class="col-3">
    </div>
    <div class="col-6">

        @if (ViewBag.msj != null)
        {
            <div class="alert alert-info" role="alert" style="text-align:center">
                @ViewBag.msj
            </div>
        }
        @using (Html.BeginForm("ActualizarPaciente", "Pacientes"))
        {
            @Html.HiddenFor(m => m.idPaciente)
            <div class="input-group mb-3">
                @Html.TextBoxFor(m => m.Cedula, new
                {
                    @type = "text",
                    @class = "form-control",
                    @placeholder = "Identificación",
                    onkeyup = "ConsultarIdentificacion();"
                })
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                @Html.TextBoxFor(m => m.Nombre, new { @type = "text", @class = "form-control", @placeholder = "Nombre", @readOnly = true })
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                @Html.TextBoxFor(m => m.Correo, new { @type = "email", @class = "form-control", @placeholder = "Correo Electrónico" })
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                </div>
                <div class="col-6">
                    <button type="submit" class="btn btn-primary btn-block" style="width:100%">Procesar</button>
                </div>
            </div>
        }
    </div>
</div>
