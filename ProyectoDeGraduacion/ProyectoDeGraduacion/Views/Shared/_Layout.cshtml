<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Clínica Dental Dra. Mariana Garro</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- Bootstrap  -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Theme Style -->
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/css/stylesHistorial.css">

    <!-- Responsive -->
    <link rel="stylesheet" type="text/css" href="~/css/responsive.css">

    <!-- Colors -->
    <link rel="stylesheet" type="text/css" href="~/css/colors/color1.css" id="colors">

    <!-- Animation Style -->
    <link rel="stylesheet" type="text/css" href="~/css/animate.css">

    <link href="~/root/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/root/dist/css/adminlte.min.css" rel="stylesheet" />
    <link href="~/root/dist/css/styles.css" rel="stylesheet" />

    <!-- Sweet Alert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/2.0.8/css/dataTables.bootstrap4.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.12.3/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/css/chatbot.css" rel="stylesheet" />
</head>

<body class="page-template-front-page header-sticky home2">
    <div class="boxed">
        <!-- Header -->
        <header id="header" class="header style2 clearfix">
            <div class="header-inner">
                <div class="nav-wrap">
                    <div class="btn-menu"></div>
                    <nav id="mainnav" class="navbar navbar-expand">
                        <ul class="navbar-nav ml-auto">

                            <li>
                                <a href="@Url.Action("Index", "Login")" class="text-center">
                                    <img src="~/images/logoClinica.png" alt="image">
                                </a>
                            </li>
                            <li><a href="@Url.Action("Index", "Login")"> Home</a></li>
                            @if (Session["RolUsuario"].ToString() == "1")
                            {
                                <li><a href="@Url.Action("MostrarInventario", "Inventario")">Inventario</a></li>
                                <li><a href="@Url.Action("ConsultarPacientes", "Pacientes")"> Pacientes</a></li>
                                <li><a href="@Url.Action("MostrarProductos", "Seguimiento")">Seguimiento de productos</a></li>

                            }
                            <li><a href="@Url.Action("IndexHistorial", "Historial")">Historia Clínica</a></li>
                            <li><a href="@Url.Action("MisCitas", "Citas")">Citas</a></li>
                            <li><a href="@Url.Action("MisProductos", "Seguimiento")">Mis Productos</a></li>
                            <li><a href="@Url.Action("verCalificaciones", "Calificacion")"> Calificación</a></li>
                            <li class="nav-item dropdown">
                                <a class="nav-link" data-bs-toggle="dropdown" href="#">
                                    @Session["NombreUsuario"].ToString()
                                    <i class="far fa-user ml-2"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                                    <div class="dropdown-divider"></div>
                                    <a href="@Url.Action("MiPerfil", "Perfil")" class="dropdown-item">
                                        <i class="fas fa-users mr-2"></i> Perfil
                                        <span class="float-right text-muted text-sm"></span>
                                    </a>
                                    <div class="dropdown-divider"></div>

                                    <a href="@Url.Action("CerrarSesion", "Login")" class="dropdown-item">
                                        <i class="fas fa-door-open mr-2"></i> Cerrar Sesión
                                        <span class="float-right text-muted text-sm"></span>
                                    </a>
                                </div>
                            </li>
                        </ul>
                            
                    </nav>
                </div>
            </div>
        </header><!-- /.header -->
        <!-- Contenido Principal -->

        <div class="container body-content">
            @RenderBody()
            <hr />
        </div>

        <div id="chatbot">
            <div id="chatbot-button" onclick="toggleChatbot()">Asistente Virtual</div>
            <div id="chatbot-content">
                <div class="text-center">
                    <div class="d-inline-block mt-2">
                        <button class="btn btn-primary d-block mb-2 mx-auto">1- Horario</button>
                        <button class="btn btn-primary d-block mb-2 mx-auto">2- Servicios</button>
                        <label for="Pregunta" class="form-label">Opción:  </label>
                        <input type="text" class="form-control" id="Pregunta" value="1" required>
                        <p id="respuesta" class="respuesta-box">El Horario de atención de la doctora es de Lunes a Viernes de 7 am a 5pm</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="footer">
            <div class="footer-widgets">
                <div class="container">
                    <div class="row">
                        <!-- Descripción -->
                        <div class="col-md-4">
                            <div class="widget widget_text">
                                <h5 class="widget-title">Sonríe más</h5>
                                <div class="textwidget">
                                    <p>Sonríe con confianza</p><br>
                                    <p>Cuidamos tu salud dental para que muestres tu mejor sonrisa.</p>
                                </div>
                            </div>
                        </div>

                        <!-- Google Maps -->
                        <div class="col-md-4">
                            <div class="widget widget_text">
                                <h5 class="widget-title">Ubicación</h5>
                                <div class="map-container">
                                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d209423.44069135375!2d-84.20872844259455!3d9.770794751507248!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8fa11db2c6cecc15%3A0xb2002c1fc723e1f5!2sClinica%20Dental%20Dra.%20Mariana%20Garro!5e1!3m2!1ses-419!2scr!4v1724302356184!5m2!1ses-419!2scr"
                                            width="100%"
                                            height="200"
                                            style="border:0;"
                                            allowfullscreen=""
                                            loading="lazy"></iframe>
                                </div>
                            </div>
                        </div>

                        <!-- Redes Sociales -->
                        <div class="col-md-4">
                            <div class="widget widget_text">
                                <h5 class="widget-title">Redes Sociales</h5>
                                <div class="social-icons">
                                    <a href="https://www.instagram.com/dra.marianagarro/" class="social-icon">
                                        <i class="fab fa-instagram"></i>
                                    </a>
                                    <a href="https://www.facebook.com/ClinicaDentalDraMarianaGarro/" class="social-icon">
                                        <i class="fab fa-facebook-f"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/root/plugins/jquery/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/root/dist/js/adminlte.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.bootstrap4.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.12.3/sweetalert2.min.js"></script>

    <script>
        function mostrarAlerta(titulo, mensaje, tipo) {
            Swal.fire({
                title: titulo,
                text: mensaje,
                icon: tipo,
                confirmButtonText: 'Aceptar'
            });
        }
        function toggleChatbot() {
            var content = document.getElementById("chatbot-content");
            if (content.style.display === "none" || content.style.display === "") {
                content.style.display = "block";
            } else {
                content.style.display = "none";
            }
        }

    </script>
</body>

</html>

