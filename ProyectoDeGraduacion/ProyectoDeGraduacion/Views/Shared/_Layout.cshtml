    <script src="~/root/dist/js/adminlte.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.bootstrap4.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.12.3/sweetalert2.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#discrepanciaModal').on('show.bs.modal', function (event) {
                const button = $(event.relatedTarget); // Botón que activó la modal
                const idProducto = button.data('id'); // Extraer información de atributos de datos

                const modal = $(this);
                modal.find('#registrarDiscrepanciaBtn').data('id', idProducto); // Guardar idProducto para usarlo al enviar
            });

            $('#registrarDiscrepanciaBtn').click(function () {
                const idProducto = $(this).data('id');
                const mensaje = $('#discrepanciaMensaje').val();

                if (mensaje.trim() === "") {
                    Swal.fire("Error", "Por favor ingrese un mensaje.", "error");
                    return;
                }

                // Llamada a la API para enviar la discrepancia
                fetch('@Url.Action("RegistrarDiscrepancia", "Reabastecimiento")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': '@Html.AntiForgeryToken()'
                    },
                    body: JSON.stringify({ idProducto: idProducto, mensajeDiscrepancia: mensaje })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire("Éxito", "Discrepancia registrada correctamente.", "success");
                        $('#discrepanciaModal').modal('hide');
                    } else {
                        Swal.fire("Error", data.message, "error");
                    }
                })
                .catch(error => Swal.fire("Error", error.message, "error"));
            });
        });


        function mostrarAlerta(titulo, mensaje, tipo) {
            Swal.fire({
                title: titulo,
                text: mensaje,
                icon: tipo,
                confirmButtonText: 'Aceptar'
            });
        }
        function toggleChatbot() {
            var content = document.getElementById("chatbot-content");
            if (content.style.display === "none" || content.style.display === "") {
                content.style.display = "block";
            } else {
                content.style.display = "none";
            }
        }
    </script>
